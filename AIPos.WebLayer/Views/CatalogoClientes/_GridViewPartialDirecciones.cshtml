@{
    var grid = Html.DevExpress().GridView(settings =>
    {
        settings.Name = "GridViewDirecciones";
        settings.CallbackRouteValues = new { Controller = "CatalogoClientes", Action = "GridViewPartialDirecciones" };

        settings.SettingsEditing.AddNewRowRouteValues = new { Controller = "CatalogoClientes", Action = "GridViewPartialDireccionesAddNew" };
        settings.SettingsEditing.UpdateRowRouteValues = new { Controller = "CatalogoClientes", Action = "GridViewPartialDireccionesUpdate" };
        settings.SettingsEditing.DeleteRowRouteValues = new { Controller = "CatalogoClientes", Action = "GridViewPartialDireccionesDelete" };
        settings.ClientSideEvents.BeginCallback = "function(s, e) { e.customArgs['ClienteId'] = txtClienteId.GetValue(); }";
        settings.SettingsEditing.Mode = GridViewEditingMode.EditFormAndDisplayRow;
        settings.SettingsBehavior.ConfirmDelete = true;

        settings.CommandColumn.Visible = true;
        settings.CommandColumn.NewButton.Visible = true;
        settings.CommandColumn.DeleteButton.Visible = true;
        settings.CommandColumn.EditButton.Visible = true;

        settings.KeyFieldName = "Id";

        settings.SettingsPager.Visible = true;
        settings.Settings.ShowGroupPanel = false;
        settings.Settings.ShowFilterRow = true;
        settings.SettingsBehavior.AllowSelectByRowClick = false;

        settings.Columns.Add("Calle");
        settings.Columns.Add("NoExterior");
        settings.Columns.Add("NoInterior");
        settings.Columns.Add("Colonia");
        settings.Columns.Add("CodigoPostal");
        settings.Columns.Add("Referencia");
        settings.Columns.Add("Ciudad");
        settings.Columns.Add("Estado");
    });
    if (ViewData["EditError"] != null)
    {
        grid.SetEditErrorText((string)ViewData["EditError"]);
    }
}
@grid.Bind(Model).GetHtml()