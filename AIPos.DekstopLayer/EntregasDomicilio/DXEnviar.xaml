<dx:DXWindow
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
    xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
    x:Class="AIPos.DekstopLayer.EntregasDomicilio.DXEnviar"
    Title="Datos del envio" Height="170" Width="525"
    ResizeMode="NoResize"
    >

    <Grid>
        <Label Content="Nombre del repartidor:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <Label Content="Fecha y hora de salida:" HorizontalAlignment="Left" Margin="10,54,0,0" VerticalAlignment="Top"/>

        <dxe:TextEdit x:Name="txtRepartidor" HorizontalAlignment="Left" Margin="147,14,0,0" VerticalAlignment="Top" Width="268"/>
        <Button x:Name="btnEnviar" Content="Enviar ahora" HorizontalAlignment="Center" Margin="0,105,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_1"/>
        <dxe:DateEdit x:Name="deFechaSalida" HorizontalAlignment="Left" Margin="147,58,0,0" VerticalAlignment="Top" Width="238" MaskType="DateTime" 
                Mask="dd-MMM-yyyy HH:mm" DisplayFormatString="dd-MMM-yyyy HH:mm" />
        <Label Content="" Name="lblVentas" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10,14,0,0"></Label>
    </Grid>
</dx:DXWindow>
